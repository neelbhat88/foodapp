init_typeahead = function(array, addItemUrl){
	$(document).ready(function(){		
		
		$('.typeaheadTxt').typeahead({source: array});

		// ToDo: Perform error check if typeahead value is not correct
		$('.typeaheadTxt').keyup(function(e){
			var code = e.which;
			if (code == 13 && !$('.typeahead').is(":visible")) // Enter key
			{
				e.preventDefault();				
				
				$.ajax({
					url: addItemUrl, 
					data: {itemName: $(this).val(), fridgeId: $(this).attr('id')},
					success: function() {},
				});

				$(this).val('');

				return false;
			}
		});	
	});
};

